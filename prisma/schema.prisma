// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// USUARIOS Y AUTENTICACIÃ“N
// =============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String
  phone         String?
  image         String?
  password      String
  role          Role      @default(CLIENTE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  escribano     Escribano?
  consultas     Consulta[]
  reviews       Review[]
  notifications Notification[]

  @@index([email])
  @@index([role])
}

enum Role {
  CLIENTE
  ESCRIBANO
  ADMIN
}

// =============================================================================
// ESCRIBANOS
// =============================================================================

model Escribano {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  matricula   String  @unique
  bio         String?
  experiencia Int     @default(0)
  foto        String?
  ubicacion   String
  direccion   String

  atencionPresencial Boolean @default(true)
  atencionVirtual    Boolean @default(true)
  whatsappNumber     String?

  plan         PlanType   @default(BASICO)
  planExpiraEn DateTime?
  estadoPago   EstadoPago @default(ACTIVO)

  calificacion Float   @default(0)
  totalReviews Int     @default(0)
  verificado   Boolean @default(false)
  activo       Boolean @default(true)

  // Precios por servicio
  precioEscrituras      Decimal? @db.Decimal(12, 2)
  precioDeclaratoria    Decimal? @db.Decimal(12, 2)
  precioPoderes         Decimal? @db.Decimal(12, 2)
  precioCertificaciones Decimal? @db.Decimal(12, 2)
  precioTestamentos     Decimal? @db.Decimal(12, 2)
  precioDonaciones      Decimal? @db.Decimal(12, 2)
  precioUsufructo       Decimal? @db.Decimal(12, 2)
  precioLoteos          Decimal? @db.Decimal(12, 2)
  precioRegimenPH       Decimal? @db.Decimal(12, 2)
  precioFideicomisos    Decimal? @db.Decimal(12, 2)
  precioAutorizaciones  Decimal? @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  consultas        Consulta[]
  reviews          Review[]
  subscriptions    Subscription[]
  disponibilidades Disponibilidad[]
  bloqueos         BloqueHorario[]

  @@index([userId])
  @@index([matricula])
  @@index([ubicacion])
  @@index([calificacion])
  @@index([activo])
  @@index([verificado])
}

enum PlanType {
  BASICO
  NOTARIO
  NOTARIO_PRO
}

enum EstadoPago {
  ACTIVO
  VENCIDO
  SUSPENDIDO
  CANCELADO
}

// =============================================================================
// SISTEMA DE PAGOS Y SUSCRIPCIONES
// =============================================================================

model Subscription {
  id          String    @id @default(cuid())
  escribanoId String
  escribano   Escribano @relation(fields: [escribanoId], references: [id], onDelete: Cascade)

  mercadoPagoSubscriptionId String? @unique
  mercadoPagoPreapprovalId  String? @unique

  status      SubscriptionStatus @default(PENDING)
  currentPlan PlanType
  amount      Decimal            @db.Decimal(10, 2)
  currency    String             @default("ARS")

  startDate       DateTime
  endDate         DateTime
  nextBillingDate DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[]

  @@index([escribanoId])
  @@index([status])
  @@index([nextBillingDate])
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  PAST_DUE
  CANCELLED
  EXPIRED
}

model Payment {
  id             String       @id @default(cuid())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  mercadoPagoPaymentId String?       @unique
  amount               Decimal       @db.Decimal(10, 2)
  status               PaymentStatus @default(PENDING)
  paymentMethod        String?

  paidAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([subscriptionId])
  @@index([status])
  @@index([createdAt])
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
  REFUNDED
}

// =============================================================================
// DISPONIBILIDAD Y AGENDA
// =============================================================================

model Disponibilidad {
  id          String    @id @default(cuid())
  escribanoId String
  escribano   Escribano @relation(fields: [escribanoId], references: [id], onDelete: Cascade)

  diaSemana  Int
  horaInicio String
  horaFin    String
  activo     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([escribanoId, diaSemana, horaInicio])
  @@index([escribanoId])
  @@index([activo])
}

model BloqueHorario {
  id          String    @id @default(cuid())
  escribanoId String
  escribano   Escribano @relation(fields: [escribanoId], references: [id], onDelete: Cascade)

  fecha      DateTime @db.Date
  horaInicio String
  horaFin    String
  motivo     String?

  createdAt DateTime @default(now())

  @@index([escribanoId, fecha])
}

// =============================================================================
// CONSULTAS Y CITAS
// =============================================================================

model Consulta {
  id          String    @id @default(cuid())
  clienteId   String
  cliente     User      @relation(fields: [clienteId], references: [id])
  escribanoId String
  escribano   Escribano @relation(fields: [escribanoId], references: [id])

  servicio  TipoServicio
  modalidad Modalidad
  fecha     DateTime
  duracion  Int            @default(60)
  detalles  String?
  estado    EstadoConsulta @default(PENDIENTE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  review Review?

  @@index([clienteId])
  @@index([escribanoId])
  @@index([fecha])
  @@index([estado])
}

enum TipoServicio {
  ESCRITURAS
  DECLARATORIA
  PODERES
  CERTIFICACIONES
  TESTAMENTOS
  DONACIONES
  USUFRUCTO
  LOTEOS
  REGIMEN_PH
  FIDEICOMISOS
  AUTORIZACIONES
  OTROS
}

enum Modalidad {
  PRESENCIAL
  VIRTUAL_ZOOM
  VIRTUAL_WHATSAPP
}

enum EstadoConsulta {
  PENDIENTE
  CONFIRMADA
  COMPLETADA
  CANCELADA
  RECHAZADA
}

// =============================================================================
// REVIEWS Y CALIFICACIONES
// =============================================================================

model Review {
  id          String    @id @default(cuid())
  clienteId   String
  cliente     User      @relation(fields: [clienteId], references: [id])
  escribanoId String
  escribano   Escribano @relation(fields: [escribanoId], references: [id])
  consultaId  String    @unique
  consulta    Consulta  @relation(fields: [consultaId], references: [id])

  calificacion Int     @default(5)
  comentario   String?
  respuesta    String?
  visible      Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([escribanoId])
  @@index([calificacion])
  @@index([createdAt])
}

// =============================================================================
// NOTIFICACIONES
// =============================================================================

model Notification {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type    NotificationType
  title   String
  message String
  read    Boolean          @default(false)
  link    String?

  createdAt DateTime @default(now())

  @@index([userId, read])
  @@index([createdAt])
}

enum NotificationType {
  CONSULTA_NUEVA
  CONSULTA_CONFIRMADA
  CONSULTA_CANCELADA
  REVIEW_NUEVA
  PAGO_EXITOSO
  PAGO_RECHAZADO
  PLAN_EXPIRA_PRONTO
  SISTEMA
}
